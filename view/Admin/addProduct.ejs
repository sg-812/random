     <section class="addForm">
        <div class="container py-5 text-light">
            <form action="/admin/postData" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="product_name" class="form-label">Product Name</label>
                  <input type="text" class="form-control" id="product_name" name="p_name" >
                </div>
                <div class="mb-3">
                  <label for="product_price" class="form-label">Product Price</label>
                  <input type="number" class="form-control" id="product_price" name="p_price" >
                </div>                
                <div class="mb-3">
                  <label for="product_company" class="form-label">Company</label>
                  <input type="text" class="form-control" id="product_company" name="p_company" >
                </div>  
